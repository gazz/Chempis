!!! XML
!!!
%html
  %head
    %title Ķeizara Dižbumbas 2011
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'south-street/jquery-ui-1.8.12.custom'
    /= javascript_include_tag 'jquery-1.5.1.min'
    /= javascript_include_tag 'jquery-ui-1.8.12.custom.min'
    /= javascript_include_tag 'jquery-ui-timepicker-addon'
    /= javascript_include_tag :all
    =javascript_include_tag 'jquery.min', 'jquery-ui-1.8.12.custom.min', 'jquery-ui-timepicker-addon', 'application', 'rails'
    
    = csrf_meta_tag
  
  %body
  
    %div#tournaments

      %div#filler
      
      %div#filler_top
      
      %div#top_line
        #div#header
          = render 'layouts/header'
    
      %div#contents
        = render 'layouts/messages'
        %div#contents_right
          = render 'layouts/user'
        %div#contents_left
          = yield
        
        #div.clear.contents_bottom


      %div#footer
        %div#copyright Visas bumbas aizsargātas un tiek turētas kulītē
        = debug(params) if Rails.env.development?
