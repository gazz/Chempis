= semantic_form_for [@game.tournament, @game] do |form|
  = form.input :player1_id, :as => :select, :collection => User.all, :label => "Sportists #1"
  = form.input :player2_id, :as => :select, :collection => User.all, :label => "Sportists #2"
  = form.input :player1_points, :as => :select, :collection => (0..23).to_a, :label => "Pirmā sportista punkti"
  = form.input :player2_points, :as => :select, :collection => (0..23).to_a, :label => "Otrā sportista punkti"
  .actions
    = form.buttons do
      =form.commit_button :label => 'Saglabāt'
    
.clear